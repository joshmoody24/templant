{
  "name": "templant",
  "version": "0.1.0",
  "description": "Translate between different template languages",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joshmoody24/templant.git"
  },
  "bugs": {
    "url": "https://github.com/joshmoody24/templant/issues"
  },
  "homepage": "https://github.com/joshmoody24/templant#readme",
  "keywords": [
    "template",
    "nunjucks",
    "mustache",
    "handlebars",
    "ejs",
    "liquid",
    "pug",
    "translation"
  ],
  "type": "module",
  "files": [
    "dist/"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js"
  },
  "scripts": {
    "build": "rm -rf dist && cp -r src dist",
    "release": "npm run build && npm publish --access public",
    "test": "node --test",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "dependencies": {
    "liquidjs": "^10.21.1",
    "nunjucks": "^3.2.4"
  },
  "devDependencies": {
    "eslint": "^9.34.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2"
  }
}
